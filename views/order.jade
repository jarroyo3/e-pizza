extends layout

block head
  
h1 Realiza tu pedido
block content
  .container
    .row.margin-top
    .grid
      h3(class='sub-heading thumbs')  Realiza tu pedido
      if pizza
        form(method='POST', action='/order/submit', class='clearfix')
          input(type="hidden", name="pizza", value=pizza.title)
          .col-md-6.thumbs
            figure.effect-bubba.wow.fadeIn.animated(data-wow-delay='0.1s', style='visibility: visible; animation-delay: 0.1s; animation-name: fadeIn;')
              a(href='img/photo-a.jpg')
                img(src=pizza.image, alt='')
                figcaption
          .col-md-6
              h2 #{pizza.title} 
              span #{pizza.subtitle}
              p.grid #{pizza.description}
              .form-group
                | Observaciones en el pedido 
                textarea.form-control(name='comments')
              if user 
                button(class="btn btn-default margin-top", href="/order?pizza=#{pizza._id}" style="position: relative; top: 10px") Hacer pediddo
