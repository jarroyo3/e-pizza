doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/admin/light-bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/admin/override-admin.css')
    link(rel='stylesheet', href='/stylesheets/admin/styles.css')
    link(rel='stylesheet', href=' https://opensource.keycdn.com/fontawesome/4.7.0/font-awesome.min.css')
    script(src='https://code.jquery.com/jquery-3.2.1.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')

  body
    div(id="contenedor-login", class="container")
      .card.card-container
        if errors
            include ../errors
        // <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" />
        img#profile-img.profile-img-card(src='//ssl.gstatic.com/accounts/ui/avatar_2x.png')
        p#profile-name.profile-name-card
        form(class="form-signin", action="/admin/auth", method="post")
          span#reauth-email.reauth-email
          input#inputEmail.form-control(type='email', placeholder='Email address', required='', autofocus='',name="email")
          input#inputPassword.form-control(type='password', placeholder='Password', required='', name='password')
          #remember.checkbox
            label
              input(type='checkbox', value='remember-me')
              |  Remember me
          button.btn.btn-lg.btn-primary.btn-block.btn-signin(type='submit') Sign in
        a.forgot-password(href='#')
          | Forgot the password?
